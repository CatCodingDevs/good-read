@model GoodRead.Domain.Entities.Books.Book;

<div class="characteristics mt-5">
    <div class="form-control">
        <div class="col-lg-4 card mb-5 me-5 h-300px w-300px">
            <div class="form w-300px h-300px mt-5">
                <img class="h-300px w-300px" src="~/media/images/@Model.ImagePath" />
            </div>
        </div>
        <div class="form-control mb-20 mt-20">
            <table class="table table-striped table-borderless">
                <tbody>
                    <tr>
                        <td>Title</td>
                        <td>
                            @Model.Title
                        </td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td>
                            @Model.Description
                        </td>
                    </tr>
                    <tr>
                        <td>Price</td>
                        <td>
                            @Model.Price
                        </td>
                    </tr>

                    <tr>
                        <td>Total pages</td>
                        <td>
                            @Model.PageNumber
                        </td>
                    </tr>

                    <tr>
                        <td>Language</td>
                        <td>
                            @Model.BookLanguage
                        </td>
                    </tr>
                    <tr>
                        <td>ISBN</td>
                        <td>
                            @Model.ISBN
                        </td>
                    </tr>

                    <tr>
                        <td>Published year</td>
                        <td>
                            @Model.PublishedYear.Year
                        </td>
                    </tr>

                    <tr>
                        <td>Publisher id</td>
                        <td>
                            @Model.PublisherId
                        </td>
                    </tr>

                    <tr>
                        <td>Author id</td>
                        <td>
                            @Model.AuthorId
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>